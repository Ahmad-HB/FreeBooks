@model CategoryViewModel
@inject UserManager<ApplicationUser> userManager

@{
    ViewData["Titel"] = "Categories";
    Layout = "_LayoutAdmin";
}
<style>
    /* Style the tab */
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }

    /* Style the buttons that are used to open the tab content */
    .tab button {
        background-color: inherit;
        float: right;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 14px 16px;
        transition: 0.3s;
    }

    /* Change background color of buttons on hover */
    .tab button:hover {
        background-color: #ddd;
    }

    /* Create an active/current tablink class */
    .tab button.active {
        background-color: #ccc;
    }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }
</style>

<div class="wrapper">
    <!--Content-Header-->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@Resources.lbCategories</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="/Admin/Home/Index">@Resources.lbHomePage</a>
                        </li>
                        <li class="breadcrumb-item active">@Resources.lbManageBook</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@Resources.lbCategories</h3>
                        <div class="card-tools">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-outline-info rounded-pill" data-toggle="modal" data-target="#exampleModal" onclick="Reset()">
                                @Resources.lbbtnSaveNewCategory
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        <!-- Tab links -->
                        <div class="tab">
                            <button class="tablinks" onclick="openCity(event, 'Categories')" id="defaultOpen">@Resources.lbCategories</button>
                            <button class="tablinks" onclick="openCity(event, 'LogCategories')" id="defaultOpen2">@Resources.lbLogCategories</button>
                        </div>

                        <!-- Tab content -->
                        <div id="Categories" class="tabcontent">
                            <table id="tableCategory" class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <td>@Resources.lbNameCategory</td>
                                    <td>@Resources.lbDescription</td>
                                    <td>@Resources.lbEvents</td>

                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.Categories)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Description
                                        </td>
                                        <td>
                                            <input type="button" class="btn btn-info btn-sm" onclick="Edit('@item.Id','@item.Name','@item.Description')" value="@Resources.lbbtnEdit" data-toggle="modal" data-target="#exampleModal"/>
                                            |
                                            <input type="button" class="btn btn-danger btn-sm" onclick="Delete('@item.Id')" value="@Resources.lbbtnDelete"/>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>

                        <div id="LogCategories" class="tabcontent">
                            <table id="tableLogCategory" class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <td>#</td>
                                    <td>@Resources.lbNameCategory</td>
                                    <td>@Resources.lbActionName</td>
                                    <td>@Resources.lbDate</td>
                                    <td>@Resources.lbUserName</td>
                                    <td>@Resources.lbEvents</td>

                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.LogCategories)
                                {
                                    <tr>
                                        <td>#</td>
                                        <td>@item.Category.Name</td>
                                        <td>
                                            @switch (@item.Action)
                                            {
                                                case "Save":
                                                    <span class="badge badge-success" style="width:150px; height:25px">@item.Action</span>
                                                    break;
                                                case "Update":
                                                    <span class="badge badge-warning" style="width:150px; height:25px">@item.Action</span>
                                                    break;
                                                default:
                                                    <span class="badge badge-danger" style="width:150px; height:25px">@item.Action</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@item.Date</td>
                                        <td>@userManager.FindByIdAsync(item.UserId.ToString()).Result?.Name</td>

                                        <td>
                                            <input type="button" class="btn btn-danger btn-sm" onclick="DeleteLog('@item.Id')" value="@Resources.lbbtnDelete"/>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

